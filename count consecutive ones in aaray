#include <climits>
#include<iostream>
using namespace std;

int main(){
	int arr[9]={1,1,1,1,0,1,0,2};
	int count=0;
    int maxi=INT_MIN;

	
	for (int i=0; i<9; i++){
		if (arr[i]==1){
		 count++;
		 
	    }
		else{
			count=0;
		} 
		if (maxi<count){
			maxi=count;
				
		}
	
    }
    cout<<maxi<<endl;
}